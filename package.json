{
  "name": "baseball-fan-cast.app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite --host --mode production",
    "dev": "vite --host --mode development",
    "build": "tsc && vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ./src/**/*.{js,jsx,ts,tsx,css,md,json} --config ./.prettierrc.json",
    "prepare": "husky install",
    "deploy": "gcloud run deploy baseball-fan-cast"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/themes": "^3.1.6",
    "@svgr/rollup": "^8.1.0",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "firebase": "^11.1.0",
    "i18next": "22.4.9",
    "i18next-http-backend": "2.1.1",
    "lucide-react": "^0.469.0",
    "next-themes": "^0.4.4",
    "prettier": "^3.4.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "12.1.4",
    "react-player": "^2.16.0",
    "react-responsive": "^10.0.0",
    "react-router-dom": "6.6.2",
    "react-search-autocomplete": "^8.5.2",
    "react-select": "^5.9.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "@vitejs/plugin-react-swc": "3.0.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "globals": "^15.14.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.11",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "4.9.3",
    "typescript-eslint": "^8.18.1",
    "vite": "4.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "proxy": "http://statsapi.mlb.com/api/v1"
}
